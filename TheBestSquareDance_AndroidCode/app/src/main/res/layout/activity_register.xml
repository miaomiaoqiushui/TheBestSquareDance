<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/login_corner_border"

            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:id="@+id/linear_layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/night_biz_pc_account_username_icon"/>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_layout_edt_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/register_edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:hint="注册账号（推荐手机号）"
                        android:inputType="textAutoComplete"
                        android:lines="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:textColorHint="#b3b3b0"
                        android:textSize="15sp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/midle_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_layout_user_name"
                android:layout_marginLeft="30dp"
                android:background="#cacaca"
                android:orientation="horizontal">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear_layout_pwd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/midle_line"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/night_biz_pc_account_pwd_icon"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_layout_edt_pwd">

                    <EditText
                        android:id="@+id/register_edt_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="注册密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:textColorHint="#b3b3b0"
                        android:textSize="15sp"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/midle_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/linear_layout_user_name"
                android:layout_marginLeft="30dp"
                android:background="#cacaca"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_layout_pwd1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/midle_line"
                android:layout_marginTop="62dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_register_name"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_layout_edt_pwd1">

                    <EditText
                        android:id="@+id/nick_edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="注册昵称"
                        android:lines="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:textColorHint="#b3b3b0"
                        android:textSize="15sp"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

        </RelativeLayout>




        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/button_border_radius"
            android:elevation="5dp"
            android:text="注   册"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


</RelativeLayout>
